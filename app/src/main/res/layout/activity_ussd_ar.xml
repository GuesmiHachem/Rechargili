<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity.partyUssd.UssdActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:gravity="center_vertical|center_horizontal"
    android:background="@drawable/back8">

    <Button
        android:layout_width="285dp"
        android:layout_height="80dp"
        android:text="جميع رموز USSD"
        android:id="@+id/boutonTout"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bouton3"
        android:layout_margin="10dp"
        android:textSize="23dp"
        android:drawableLeft="@drawable/liste"
        android:paddingLeft="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:elevation="20dp"
        android:translationZ="30dp" />

    <Button
        android:layout_width="285dp"
        android:layout_height="80dp"
        android:text="رموز USSD المفضلة"
        android:id="@+id/boutonFavorie"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bouton3"
        android:layout_margin="10dp"
        android:textSize="23dp"
        android:drawableLeft="@drawable/addfavorie"
        android:paddingLeft="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:elevation="20dp"
        android:translationZ="30dp" />

    <Button
        android:layout_width="285dp"
        android:layout_height="80dp"
        android:text="تحديث"
        android:id="@+id/maj"
        android:background="@drawable/bouton3"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:drawableLeft="@drawable/refresh"
        android:textColor="#ffffff"
        android:gravity="clip_horizontal|center_vertical|center_horizontal"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:elevation="20dp"
        android:translationZ="30dp" />

</LinearLayout>
