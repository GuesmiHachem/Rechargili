<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity.SmsActivity"
    android:orientation="vertical"
    android:background="@drawable/back8"
    android:weightSum="1">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView2"
        android:background="@drawable/message"
        android:layout_margin="5dp"
        android:elevation="20dp"
        android:translationZ="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nomContact"
        android:layout_weight="0.09"
        android:background="@drawable/edittext"
        android:textColor="#000000"
        android:textSize="30dp"
        android:paddingLeft="30dp"
        android:drawableLeft="@drawable/person"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:elevation="20dp"
        android:translationZ="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/telContact"
        android:layout_weight="0.09"
        android:background="@drawable/edittext"
        android:textColor="#000000"
        android:textSize="30dp"
        android:paddingLeft="30dp"
        android:drawableLeft="@drawable/tel"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:elevation="20dp"
        android:translationZ="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message"
        android:background="@drawable/edittext"
        android:textColor="#000000"
        android:textSize="20dp"
        android:paddingLeft="30dp"

        android:gravity="center_vertical"
        android:maxLines="6"
        android:layout_weight="0.74"
        android:layout_margin="5dp"
        android:elevation="20dp"
        android:translationZ="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="send message"
        android:id="@+id/boutonEnvoyer"
        android:background="@drawable/bouton3"
        android:layout_margin="5dp"
        android:textColor="#e4e2e2"
        android:textSize="30dp"
        android:textStyle="bold"
        android:elevation="20dp"
        android:translationZ="10dp" />

</LinearLayout>
